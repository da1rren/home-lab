@using Home.Plant.Watering.Ui.RpcServices
@page "/"

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

@if (IsPumping)
{
    <button @onclick="TogglePumpOff">Toggle Off Pump</button>
}
else
{
    <button @onclick="TogglePumpOn">Toggle On Pump</button>
}

@code {

    public bool IsPumping { get; set; }
    
    private void TogglePumpOn()
    {
        IsPumping = true;
        PumpRpcService.PumpRequests.Add(true);
    }
    
    private void TogglePumpOff()
    {
        IsPumping = false;
        PumpRpcService.PumpRequests.Add(false);
    }

}
